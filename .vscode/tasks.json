{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build with g++",
      "type": "shell",
      "command": "C:/TDM-GCC-64/bin/gcc.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
